<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: "
        app:layout_constraintBottom_toBottomOf="@+id/cltName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toEndOf="@+id/cltName"
        app:layout_constraintTop_toTopOf="@+id/cltName"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/lblDOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOB: "
        app:layout_constraintStart_toStartOf="@+id/cltName"
        app:layout_constraintTop_toBottomOf="@+id/cltName" />

    <TextView
        android:id="@+id/cltDOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jan 23, 1950"
        app:layout_constraintBottom_toBottomOf="@+id/lblDOB"
        app:layout_constraintStart_toEndOf="@+id/lblDOB"
        app:layout_constraintTop_toTopOf="@+id/lblDOB" />

    <TextView
        android:id="@+id/cltName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="140dp"
        android:text="John Doe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone #:"
        app:layout_constraintStart_toStartOf="@+id/lblDOB"
        app:layout_constraintTop_toBottomOf="@+id/lblDOB" />

    <TextView
        android:id="@+id/cltPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(123) 456-7890"
        app:layout_constraintBottom_toBottomOf="@+id/lblPhone"
        app:layout_constraintStart_toEndOf="@+id/lblPhone"
        app:layout_constraintTop_toTopOf="@+id/lblPhone" />

    <TextView
        android:id="@+id/cltID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345"
        app:layout_constraintBottom_toBottomOf="@+id/lblID"
        app:layout_constraintStart_toEndOf="@+id/lblID"
        app:layout_constraintTop_toTopOf="@+id/lblID" />

</androidx.constraintlayout.widget.ConstraintLayout>